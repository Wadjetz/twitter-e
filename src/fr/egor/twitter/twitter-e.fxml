<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ListView?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.egor.twitter.main.MainController" >
  <top>
    <HBox style="-fx-padding: 10 10 0 10" prefWidth="1180">
      <ImageView
        fitWidth="50"
        fitHeight="50"
        fx:id="userPictureByUrl" />

      <VBox style="-fx-padding: 0 10">
        <Label
          fx:id="fullNameProfil" />

        <Label
          fx:id="screenNameProfil" />
      </VBox>

      <VBox style="-fx-padding: 0 10">
        <Label text="Tweets"/>
        <Label fx:id="tweetsNombers" text="0" textAlignment="CENTER" />
      </VBox>

      <VBox style="-fx-padding: 0 10">
        <Label text="Following"/>
        <Label fx:id="abonnementsNumbers" text="0" textAlignment="CENTER" />
      </VBox>

      <VBox style="-fx-padding: 0 10">
        <Label text="Followers" />
        <Label fx:id="abonnesNumbers" text="0" textAlignment="CENTER" />
      </VBox>

      <Button fx:id="update" onAction="#updateTweets" text="Update" prefHeight="40" />
    </HBox>
  </top>
  <center>
    <VBox style="-fx-padding: 10 10 0 10">
      <ListView fx:id="tweets" prefWidth="1200" prefHeight="600" />
      <HBox style="-fx-padding: 0 10">
        <Button text="Previous" onAction="#previousTweets" />
        <Label fx:id="currentPage" text="1" />
        <Button text="Next" onAction="#nextTweets" />
      </HBox>
    </VBox>
  </center>
  <bottom>
    <HBox style="-fx-padding: 10 10 10 10">

      <TextArea
        fx:id="tweetContent"
        prefHeight="40"
        prefWidth="1100"
        onKeyReleased="#changeTweetContentAction"
        wrapText="true"
        text="" />

      <VBox style="-fx-padding: 0 10">

        <Label
          fx:id="wordCount"
          alignment="CENTER"
          prefWidth="100"
          text="0" />

        <Button
          fx:id="tweetSend"
          onAction="#sendTweetButtonAction"
          prefWidth="100"
          text="Send" />
      </VBox>

    </HBox>
  </bottom>
</BorderPane>
