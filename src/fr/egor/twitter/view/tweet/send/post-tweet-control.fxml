<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>

<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml">
  <GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">

    <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <TextArea fx:id="tweetContent" onKeyReleased="#changeTweetContentAction" text="" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.rowSpan="2" />

    <Label fx:id="wordCount" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Button fx:id="tweetSend" onAction="#sendTweetButtonAction" prefHeight="74.0" prefWidth="50.0" text="Send" GridPane.columnIndex="1" GridPane.rowIndex="1" />

  </GridPane>
</fx:root>
